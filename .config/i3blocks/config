# Guess the weather hourly
[weather]
command=curl -Ss 'https://wttr.in?0&T&Q' | cut -c 16- | head -2 | xargs echo
interval=3600
color=#A4C2F4

# Query my default IP address only on startup
[ip]
command=hostname -i | awk '{ print "IP:" $1 }'
interval=once
color=#A4C2F4

[indicator]
command=~/.config/i3blocks/i3indicator
interval=once
color=#A4C2F4
signal=3

[cpu_usage]
command=~/.config/i3blocks/cpu_usage
interval=3
color=#A4C2F4

[volume]
command=~/.config/i3blocks/volume
interval=once
color=#A4C2F4
signal=2

[time]
command=date
interval=1
